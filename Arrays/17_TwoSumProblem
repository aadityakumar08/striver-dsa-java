/**
 * âœ… Problem: Two Sum Problem
 * ğŸ“ Link: https://takeuforward.org/data-structure/two-sum-problem/
 * ğŸ“… Date: 2025-07-17
 * ğŸ‘¨â€ğŸ’» Author: Aditya Kumar
 * ğŸ§  Approach: Brute-force - check all pairs to find the two indices whose values sum up to the target.
 * â±ï¸ Time Complexity: O(nÂ²)
 * ğŸ“¦ Space Complexity: O(1)
 */

public class TwoSumBruteForce {
    public static int[] twoSum(int n, int[] arr, int target) {
        int[] ans = new int[2];
        ans[0] = ans[1] = -1;

        for (int i = 0; i < n; i++) {
            for (int j = i + 1; j < n; j++) {
                if (arr[i] + arr[j] == target) {
                    ans[0] = i;
                    ans[1] = j;
                    return ans; // Return the first valid pair
                }
            }
        }

        return ans; // No pair found
    }

    public static void main(String[] args) {
        int n = 5;
        int[] arr = {2, 6, 5, 8, 11};
        int target = 14;

        int[] ans = twoSum(n, arr, target);

        System.out.println("Indices of elements that sum to target: [" + ans[0] + ", " + ans[1] + "]");
    }
}


//here's the optimal approach to solve the question

/**
 * âœ… Problem: Two Sum Problem (Optimized)
 * ğŸ“ Link: https://takeuforward.org/data-structure/two-sum-problem/
 * ğŸ“… Date: 2025-07-17
 * ğŸ‘¨â€ğŸ’» Author: Aditya Kumar
 * ğŸ§  Approach: Use a HashMap to store the complement of each element while traversing the array.
 * â±ï¸ Time Complexity: O(n)
 * ğŸ“¦ Space Complexity: O(n)
 */

import java.util.*;

public class TwoSumOptimized {
    public static int[] twoSum(int n, int[] arr, int target) {
        Map<Integer, Integer> map = new HashMap<>();

        for (int i = 0; i < n; i++) {
            int complement = target - arr[i];

            if (map.containsKey(complement)) {
                return new int[]{map.get(complement), i};
            }

            map.put(arr[i], i);
        }

        return new int[]{-1, -1};
    }

    public static void main(String[] args) {
        int n = 5;
        int[] arr = {2, 6, 5, 8, 11};
        int target = 14;

        int[] ans = twoSum(n, arr, target);

        System.out.println("Indices of elements that sum to target: [" + ans[0] + ", " + ans[1] + "]");
    }
}
